<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="ScrollViewSize,UselessLeaf" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FilmePojo" >    
    
    <LinearLayout 
        android:id="@+id/linearLayoutNomeFilme"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
	    android:background="#800000" >
	   
        <TextView
	        android:id="@+id/nomefilme"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:text="Nome do Filme"
	        android:textColor="#FFFFFF"
	        android:gravity="center_vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagefilme"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayoutNomeFilme"
        android:layout_margin="10dip"
        android:onClick="verImagem" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagefilme"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtRatingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagefilme"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagefilme"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/txtRatingValue"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/imageButtonGostei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/like" />

    <ImageButton
        android:id="@+id/imageButtonTrailler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBar1"
        android:layout_below="@+id/ratingBar1"
        android:src="@drawable/youtube" />

    <ImageButton
        android:id="@+id/imageButtonNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar1"
        android:layout_toRightOf="@+id/imageButtonGostei"
        android:layout_marginLeft="18dp"
        android:src="@drawable/nota" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayoutNomeFilme"
        android:layout_below="@+id/capa"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/capa"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/imageButtonGostei"
        android:layout_marginTop="18dp"
        android:background="#800000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_below="@+id/imageButtonTrailler"
            android:gravity="center_vertical"
            android:text="Sinopse"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>

</ScrollView>
