<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="ScrollViewSize,UselessLeaf" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FilmesPojo" >

    <LinearLayout 
        android:id="@+id/linearLayoutNomeSerie"
        android:layout_width="match_parent"
       	android:layout_height="25dp"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
        
	    android:background="#800000" >
        
        <TextView
	        android:id="@+id/nomeSerie"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nome da SÃ©rie"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp"
	        android:gravity="center_vertical" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageserie"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageserie"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/linearLayoutNomeSerie"
        android:layout_below="@+id/linearLayoutNomeSerie"
        android:layout_margin="10dip"
        android:layout_marginTop="16dp"
        android:onClick="verImagem" />

    <TextView
        android:id="@+id/txtRatingValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageserie"
        android:layout_centerHorizontal="true"        
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/imageButtonTraillerSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBar2"
        android:layout_below="@+id/ratingBar2"
        android:src="@drawable/youtube" />

    <ImageButton
        android:id="@+id/imageButtonGosteiSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButtonTraillerSerie"
        android:layout_centerHorizontal="true"
        android:src="@drawable/like" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutNomeSerie"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/txtRatingValue2"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/imageButtonNotaSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ratingBar2"
        android:layout_alignTop="@+id/imageButtonGosteiSerie"
        android:src="@drawable/nota" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayoutNomeSerie"
        android:layout_below="@+id/imageButtonTraillerSerie"
        android:layout_marginTop="45dp"
        android:textColor="#FFFFFF"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linearLayoutSinopse"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/imageButtonTraillerSerie"
        android:layout_marginTop="14dp"
        android:background="#800000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Sinopse"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>

</ScrollView>